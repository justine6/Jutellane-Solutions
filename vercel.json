{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "redirects": [
    {
      "source": "/old-path",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
  {
    "source": "/api/(.*)",
    "destination": "https://external-service.com/api/$1"
  }
],
    "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
